<body class="bg-emerald-50">
  <div>
    <div
      class="flex justify-self-center bg-white w-full h-100 my-4 py-4 px-8 rounded-lg shadow-sm font-raleway border-1 border-t-4 border-emerald-600 shadow-sm"
    >
      <div class="space-y-12">
         <!-- Page Header -->
        <div class="pb-4">
          <div>
            <h1 class="font-semibold text-2xl font-raleway">New Prescription</h1>
          </div>

           <!-- New Prescription Form -->
          <%= form_with model: Prescription.new, method: :post do |f| %>
          <div class="mt-10 grid grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-6">
            <div class="sm:col-span-3">
              <%= f.label(:patient_id, "Patient name", class: "block text-sm
              font-medium leading-6 text-gray-900") %>
              <div class="mt-2">
                <%= f.select(:patient_id, class: "block rounded-md border-0
                py-1.5 text-gray-900 w-72 shadow-sm ring-1 ring-inset
                ring-gray-300 placeholder:text-gray-400 focus:ring-2
                focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6", required: true) %>
              </div>
            </div>

            <div class="sm:col-span-3">
              <%= f.label(:content, "Content", class: "block text-sm
              font-medium leading-6 text-gray-900") %>
              <div class="mt-2">
                <%= f.text_area(:content, class: "block rounded-md border-0
                py-1.5 text-gray-900 w-72 shadow-sm ring-1 ring-inset
                ring-gray-300 placeholder:text-gray-400 focus:ring-2
                focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6",
                placeholder: "Type content here", required: true) %>
              </div>
            </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="flex flex-row place-content-end">
      <button
        class="flex bg-white px-6 py-2 text-black font-raleway font-medium text-lg rounded-md mr-4 shadow-sm hover:shadow-md"
      >
        Cancel
      </button>
      <div class="m-0">
        <%= f.submit "Save", class: "flex bg-emerald-600 px-6 py-2 rounded-md
        shadow-sm text-white font-raleway font-medium text-lg
        hover:bg-emerald-500 hover:shadow-md hover:cursor-pointer" %>
      </div>
    </div>
    <% end %>
  </div>
</body>
