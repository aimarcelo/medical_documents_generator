<!-- component -->
<header
  class="header fixed bg-white shadow-sm px-4 sm:px-8 text-black w-full z-50"
>
  <div
    class="flex max-w-[75rem] mx-auto px-4 sm:px-7 items-center justify-between"
  >
    <!-- logo -->
    <h1
      class="w-3/12 font-medium text-xl sm:text-3xl font-robotoSlab hover:text-purple-700 duration-200 cursor-pointer active"
    >
      <%= link_to "medley", root_path %>
    </h1>

    <!-- navigation -->
    <nav class="nav font-normal">
      <ul
        class="mx-2 flex items-center font-raleway text-white-200 text-xs sm:text-lg"
      >
        <li
          class="sm:ml-0 p-3 pb-2 border-b-2 border-purple-700 border-opacity-0 hover:border-opacity-100 hover:text-purple-700 duration-200 cursor-pointer active"
        >
          <%= link_to "Home", root_path %>
        </li>
        <li
          class="p-3 border-b-2 pb-2 border-purple-700 border-opacity-0 hover:border-opacity-100 hover:text-purple-700 duration-200 cursor-pointer active"
        >
          <%= link_to "Prescriptions", prescriptions_path %>
        </li>
        <li
          class="p-3 border-b-2 pb-2 border-purple-700 border-opacity-0 hover:border-opacity-100 hover:text-purple-700 duration-200 cursor-pointer active"
        >
          <%= link_to "Certificates" %>
        </li>
      </ul>
    </nav>

    <!-- buttons --->
    <div class="w-3/12 flex flex-shrink justify-end items-center">
      <a href="">
        <svg
          class="h-6 sm:h-8 p-1 hover:text-purple-700 duration-200"
          aria-hidden="true"
          focusable="false"
          data-prefix="far"
          data-icon="search"
          role="img"
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 512 512"
          class="svg-inline--fa fa-search fa-w-16 fa-9x"
        >
          <path
            fill="currentColor"
            d="M508.5 468.9L387.1 347.5c-2.3-2.3-5.3-3.5-8.5-3.5h-13.2c31.5-36.5 50.6-84 50.6-136C416 93.1 322.9 0 208 0S0 93.1 0 208s93.1 208 208 208c52 0 99.5-19.1 136-50.6v13.2c0 3.2 1.3 6.2 3.5 8.5l121.4 121.4c4.7 4.7 12.3 4.7 17 0l22.6-22.6c4.7-4.7 4.7-12.3 0-17zM208 368c-88.4 0-160-71.6-160-160S119.6 48 208 48s160 71.6 160 160-71.6 160-160 160z"
            class=""
          ></path>
        </svg>
      </a>
    </div>
  </div>
</header>
